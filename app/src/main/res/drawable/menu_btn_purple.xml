<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="4dp">
                <shape>
                    <corners android:radius="32dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#431266"
                        android:startColor="#581C87" />
                    <stroke android:width="2dp" android:color="#8f63b0" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="32dp" />
                    <solid android:color="#581C87" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape>
                    <corners android:radius="32dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#7E22CE"
                        android:startColor="#C084FC" />
                    <stroke android:width="2dp" android:color="#E9D5FF" />
                </shape>
            </item>
            <item android:bottom="32dp">
                <shape>
                    <corners android:topLeftRadius="32dp" android:topRightRadius="32dp" />
                    <solid android:color="#33FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
