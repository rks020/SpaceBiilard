<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="4dp">
                <shape>
                    <corners android:radius="32dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#541e0b"
                        android:startColor="#7C2D12" />
                    <stroke android:width="2dp" android:color="#b07d6d" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="32dp" />
                    <solid android:color="#7C2D12" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape>
                    <corners android:radius="32dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#C2410C"
                        android:startColor="#FB923C" />
                    <stroke android:width="2dp" android:color="#FED7AA" />
                </shape>
            </item>
            <item android:bottom="32dp">
                <shape>
                    <corners android:topLeftRadius="32dp" android:topRightRadius="32dp" />
                    <solid android:color="#33FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
