<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="4dp">
                <shape>
                    <corners android:radius="32dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#541212"
                        android:startColor="#7F1D1D" />
                    <stroke android:width="2dp" android:color="#b06a6a" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="32dp" />
                    <solid android:color="#7F1D1D" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape>
                    <corners android:radius="32dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#991B1B"
                        android:startColor="#F87171" />
                    <stroke android:width="2dp" android:color="#FECACA" />
                </shape>
            </item>
            <item android:bottom="32dp">
                <shape>
                    <corners android:topLeftRadius="32dp" android:topRightRadius="32dp" />
                    <solid android:color="#33FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
