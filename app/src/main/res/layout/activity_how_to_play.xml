<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141428"
    android:clickable="true"
    android:focusable="true">

    <!-- Container Card -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_card"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#00FFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:text="HOW TO PLAY"
            android:textColor="#00FFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Instructions Text -->
        <TextView
            android:id="@+id/textInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="1. Drag and release to launch the ball.\n\n2. Hit all colored balls to clear the stage.\n\n3. Avoid black balls - they are dangerous!\n\n4. Collect power-ups to survive longer."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp" />

        <!-- Got It Button -->
        <Button
            android:id="@+id/btnGotIt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_rounded_cyan"
            android:text="GOT IT!"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
