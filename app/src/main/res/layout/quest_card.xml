<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#202020"
    android:id="@+id/questCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Quest Icon Container (Dynamic) -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp">
            
            <ImageView
                android:id="@+id/imgQuestIconBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_shape_hexagon"
                android:padding="2dp"/>
                
            <TextView
                android:id="@+id/tvQuestId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
        </FrameLayout>

        <!-- Quest Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Quest Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/tvQuestTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quest Title"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCoinReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° 50"
                    android:textColor="#FFC107"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Quest Description -->
            <TextView
                android:id="@+id/tvQuestDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quest description"
                android:textColor="#00E5FF"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/custom_progress_bar_horizontal"
                    android:max="100" />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    android:layout_marginStart="8dp"
                    android:minWidth="50dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Completion Status -->
            <TextView
                android:id="@+id/tvCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ“ COMPLETED"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Claim Button -->
            <Button
                android:id="@+id/btnClaimReward"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="ðŸ’° CLAIM REWARD"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_pill_gold"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
