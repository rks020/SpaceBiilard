<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#202020"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon Box -->
        <FrameLayout
            android:id="@+id/iconBox"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_menu_panel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                 />
        </FrameLayout>

        <!-- Title & Description -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPGRADE NAME"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iconBox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCurrentBoost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10% Effect"
            android:textColor="#00E5FF"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iconBox"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <!-- Level Progress Bar -->
        <ProgressBar
            android:id="@+id/progressLevel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:max="10"
            android:progress="1"
            android:progressTint="#00E5FF"
            app:layout_constraintStart_toEndOf="@id/iconBox"
            app:layout_constraintEnd_toStartOf="@id/btnBuy"
            app:layout_constraintTop_toBottomOf="@id/txtCurrentBoost"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Buy Button -->
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_pill_gold"
            android:text="500 ðŸ’°"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lvl 1/10"
            android:textColor="#888888"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/progressLevel"
            app:layout_constraintBottom_toTopOf="@id/progressLevel"
            android:layout_marginBottom="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
